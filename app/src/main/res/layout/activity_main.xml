<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/liczba"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#471313"
    android:backgroundTint="#421616"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/zdj1"
        android:layout_width="358dp"
        android:layout_height="249dp"
        android:contentDescription="@string/cat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105"
        app:srcCompat="@drawable/catzie" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        android:backgroundTint="#F49797"
        android:text="@string/b1"
        android:textAllCaps="false"
        android:textColor="#471313"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53" />

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F49797"
        android:text="@string/b2"
        android:textColor="#471313"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/b1"
        app:layout_constraintHorizontal_bias="0.392"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zdj1"
        app:layout_constraintVertical_bias="0.161" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="174dp"
        android:layout_height="71dp"
        android:layout_marginTop="162dp"
        android:layout_marginBottom="247dp"
        android:fontFamily="serif"
        android:text="@string/silnia"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#F49797"
        android:textSize="60sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/b1"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="@+id/b2"
        app:layout_constraintTop_toBottomOf="@+id/zdj1"
        app:layout_constraintVertical_bias="0.632" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="221dp"
        android:layout_height="90dp"
        android:textColorHint="#F49797"
        app:boxBackgroundColor="#2C1A1A"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="#F49797"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.137"
        app:passwordToggleTint="#F49797">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/liczba1"
            android:layout_width="221dp"
            android:layout_height="90dp"
            android:fontFamily="sans-serif-smallcaps"
            android:hint="@string/wpisz_liczb"
            android:textAlignment="center"
            android:textColor="#F49797"
            android:textColorHighlight="#953434"
            android:textColorHint="#AC6F6F"
            android:textColorLink="#3C1212"
            android:textSize="34sp"
            android:typeface="normal" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/b3"
        android:layout_width="271dp"
        android:layout_height="76dp"
        android:layout_marginBottom="24dp"
        android:background="#F49797"
        android:fontFamily="sans-serif-condensed-medium"
        android:lineSpacingExtra="8sp"
        android:text="@string/poka_wynik_silni"
        android:textColor="#471313"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        app:layout_constraintVertical_bias="0.947" />

</android.support.constraint.ConstraintLayout>